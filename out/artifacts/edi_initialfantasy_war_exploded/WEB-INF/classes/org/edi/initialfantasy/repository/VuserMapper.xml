<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.edi.initialfantasy.repository.VuserMapper" >
  <resultMap id="BaseResultMap" type="org.edi.initialfantasy.bo.Vuser" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="user_name" property="user_name" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="is_mobile_user" property="is_mobile_user" jdbcType="VARCHAR" />
    <result column="mobile_password" property="mobile_password" jdbcType="VARCHAR" />
  </resultMap>
  
  
  <select id="getUserBySelect" resultMap="BaseResultMap">
  SELECT * FROM VIEW_IUSER WHERE is_mobile_user=#{0} and mobile_password=#{1}
  </select>
  
  <select id="getUserByName" resultMap="BaseResultMap">
  SELECT * FROM VIEW_IUSER WHERE is_mobile_user=#{account}
  </select>
</mapper>